<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button type="button" class="btn btn-success">Nova Categorias</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br>
        <a href="/admin/categorias/edit/{{_id}}"><button type="button" class="btn btn-success">Editar Categorias</button></a><button</a>
        <form action="/admin/categorias/deletar"method="POST">
            <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
      </form>
        </div>
    </div>

{{else}}
<h4 class mt-3>Nenhuma categoria resgistrada</h4>
{{/each}}